<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/detailImageFood"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/loadingimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="*gambar membutuhkan koneksi internet"
        android:textSize="10sp"
        android:padding="5dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Nama Menu"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text=" :  "
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/detailNameFood"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nama Makanan"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:text=" :  "
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/detailPriceFood"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Rp. 0,-"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/detailDescFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris suscipit nisi id ligula euismod eleifend. Donec pretium nunc tellus, a convallis erat iaculis non. Donec lacinia lectus nulla. Sed sed ante sem."
            android:textSize="12sp"
            android:padding="5dp"
            android:textColor="@color/black"/>

    </LinearLayout>



</LinearLayout>